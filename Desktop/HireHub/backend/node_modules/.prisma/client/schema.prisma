datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
  jobs      Job[]
}

enum Role {
  JOBSEEKER
  EMPLOYER
}

model Job {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  skills      String
  location    String
  salary      Int
  experience  Int
  employerId  Int
  employer    User     @relation(fields: [employerId], references: [id])
  createdAt   DateTime @default(now())
}
